<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity"
    android:background="@drawable/miniback2">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginTop="14dp"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/twowithtextquiet"
        android:id="@+id/imageView5"
        android:layout_marginBottom="113dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="7dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/twowithtextpush"
        android:id="@+id/imageView4"
        android:layout_above="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="15dp"
        android:elevation="7dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/workingjaimewithtextquiet"
        android:id="@+id/imageView7"
        android:layout_marginBottom="113dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="7dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/workingjaimewithtextpush"
        android:id="@+id/imageView6"
        android:layout_above="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginBottom="15dp"
        android:elevation="7dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/enable1"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/switch1"
        android:layout_toStartOf="@+id/switch1"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="8dp"
        android:elevation="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        app:srcCompat="@drawable/textnoenable"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Save Mobile Data will send you a warning\nwhen you are using high data usage apps,\nlike Instagram or YouTube, without\nrealizing you are not connected to Wi-Fi
        \n\nYou can specify a warning location (e.g. Home)\nin our app settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="76dp"
        android:id="@+id/textView" />


</RelativeLayout>